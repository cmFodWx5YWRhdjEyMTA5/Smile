<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_1"
        android:layout_width="3dp"
        android:layout_height="23dp"
        android:background="@color/lj_colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tv_topic_type_title"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="自然风景"
        android:textColor="@color/black_text_color"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/view_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/len_10"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toRightOf="@+id/tv_topic_type_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        />
</android.support.constraint.ConstraintLayout>