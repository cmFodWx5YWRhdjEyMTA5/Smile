<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/lj_shape_topic_search_bg"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="搜索你感兴趣的话题"
        android:gravity="center"
        android:textSize="@dimen/len_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_top_banner"
        android:layout_width="0dp"
        android:layout_height="220dp"
       app:layout_constraintTop_toBottomOf="@+id/et_search"
        android:layout_marginBottom="@dimen/len_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/iv_topic_type"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/recycler_top_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginLeft="@dimen/len_20"
        />
    <TextView
        android:id="@+id/tv_topic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="话题分类"
        android:textSize="@dimen/len_16"
        android:textColor="@color/main_text_color"
        app:layout_constraintTop_toBottomOf="@+id/recycler_top_banner"
        app:layout_constraintLeft_toRightOf="@+id/iv_topic_type"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多"
        android:textSize="@dimen/len_14"
        android:textColor="@color/gray_text_color"
        app:layout_constraintTop_toBottomOf="@+id/recycler_top_banner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/len_20"
        android:layout_marginTop="@dimen/len_14"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_topic_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_topic_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        >

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>