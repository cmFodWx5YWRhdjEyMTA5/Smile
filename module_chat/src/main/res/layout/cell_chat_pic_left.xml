<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/len_6"
    android:paddingTop="@dimen/len_6">

        <ImageView
            android:id="@+id/pv_chat_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"
            />

        <ImageView
            android:id="@+id/im_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_116"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:maxWidth="@dimen/len_128"
            android:minWidth="@dimen/len_48"
            android:layout_marginLeft="55dp"
            android:gravity = "center"
            android:scaleType="fitCenter" />

</FrameLayout>