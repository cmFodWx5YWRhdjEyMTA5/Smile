<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="me.goldze.mvvmhabit.base.BaseViewModel"/>
        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/toolbar"
            layout="@layout/include_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/len_20"
                />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zzj"
            android:textSize="18dp"
            android:textColor="@color/main_text_color"
            app:layout_constraintLeft_toRightOf="@+id/iv_header"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_margin="@dimen/len_20"
            />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称：zzj"
            android:textSize="14dp"
            android:textColor="@color/sub_text_color"
            app:layout_constraintLeft_toRightOf="@+id/iv_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            android:layout_marginLeft="@dimen/len_20"
            android:layout_marginTop="@dimen/len_10"
            />

        <TextView
            android:id="@+id/tv_add_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:text="添加到通讯录"
            android:textSize="18dp"
            android:padding="@dimen/len_10"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/iv_header"
            android:layout_marginTop="@dimen/len_24"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
