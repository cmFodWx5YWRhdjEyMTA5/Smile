<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="com.zzj.open.module_chat.vm.ChatHomeViewModel"/>
        <variable
            name="viewModel"
            type="com.zzj.open.module_chat.vm.ChatHomeViewModel"/>
    </data>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fb_chat"
            />

        <net.qiujuer.genius.ui.widget.FloatActionButton
            android:id="@+id/fb_chat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:gBackgroundColor="@color/white"
            app:gTouchColor="@color/black_alpha_64"
            app:shadowColor="@color/white_alpha_48"
            android:src="@mipmap/ic_chat_add"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fb_like"
            android:layout_marginBottom="50dp"
            />
        <net.qiujuer.genius.ui.widget.FloatActionButton
            android:id="@+id/fb_like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:gBackgroundColor="@color/white"
            app:gTouchColor="@color/black_alpha_64"
            app:shadowColor="@color/white_alpha_48"
            app:layout_constraintLeft_toRightOf="@+id/fb_chat"
            app:layout_constraintRight_toLeftOf="@+id/fb_dislike"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />
        <net.qiujuer.genius.ui.widget.FloatActionButton
            android:id="@+id/fb_dislike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:gBackgroundColor="@color/white"
            app:gTouchColor="@color/black_alpha_64"
            app:shadowColor="@color/white_alpha_48"
            app:layout_constraintLeft_toRightOf="@+id/fb_like"
            app:layout_constraintRight_toLeftOf="@+id/fb_collect"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />
        <net.qiujuer.genius.ui.widget.FloatActionButton
            android:id="@+id/fb_collect"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:gBackgroundColor="@color/white"
            app:gTouchColor="@color/black_alpha_64"
            app:shadowColor="@color/white_alpha_48"
            app:layout_constraintLeft_toRightOf="@+id/fb_dislike"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
