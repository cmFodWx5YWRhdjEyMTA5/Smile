<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/len_12"
        android:text="10:00"
        android:textColor="@color/sub_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/fl_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pv_chat_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginBottom="@dimen/len_20"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_chat_msg"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/len_4"
            >
            <com.qmuiteam.qmui.widget.QMUILoadingView
                android:id="@+id/loading"
                android:layout_width="@dimen/len_2"
                android:layout_height="@dimen/len_2"
                android:color="@color/grey_300"
                android:layout_gravity="right|center_vertical"
                />
            <ImageView
                android:id="@+id/iv_send_fail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/msg_state_fail_resend"
                android:layout_gravity="right|center_vertical"
                />
        </FrameLayout>
        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/tv_chat_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello "
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:maxWidth="240dp"
            app:arrowWidth="8dp"
            app:angle="8dp"
            app:arrowHeight="10dp"
            app:arrowPosition="14dp"
            app:arrowLocation="right"
            app:bubbleColor="#7EC0EE"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pv_chat_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/default_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginRight="@dimen/len_10"
        android:layout_marginTop="@dimen/len_20"

        />
</android.support.constraint.ConstraintLayout>