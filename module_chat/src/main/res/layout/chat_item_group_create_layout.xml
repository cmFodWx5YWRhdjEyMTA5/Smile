<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.zzj.open.base.utils.PortraitView
        android:id="@+id/iv_portrait"
        android:layout_width="@dimen/len_36"
        android:layout_height="@dimen/len_36"
        android:src="@mipmap/default_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/len_16"
        android:textColor="@color/main_text_color"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/len_16"
        app:layout_constraintLeft_toRightOf="@+id/iv_portrait"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qmui_icon_checkbox_checked"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>