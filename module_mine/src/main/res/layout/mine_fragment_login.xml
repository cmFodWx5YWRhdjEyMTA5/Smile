<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="me.goldze.mvvmhabit.base.BaseViewModel"/>
        <variable
            name="viewModel"
            type="me.goldze.mvvmhabit.base.BaseViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/len_24"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textSize="18dp"
                android:textColor="@color/main_text_color"
                android:layout_margin="@dimen/len_16"
                />
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:textColorHint="@color/grey_500"
                android:textSize="@dimen/len_16"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginRight="@dimen/len_16"
                android:hint="手机号/用户名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="18dp"
                android:textColor="@color/main_text_color"
                android:layout_margin="@dimen/len_16"
                />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:textColorHint="@color/grey_500"
                android:textSize="@dimen/len_16"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginRight="@dimen/len_16"
                android:hint="请填写密码"
                />
        </LinearLayout>


        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="登录"
            android:layout_margin="@dimen/len_28"
            android:gravity="center"
            android:background="@drawable/g_button_background"
            />

    </LinearLayout>
</layout>
